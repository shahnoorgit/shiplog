{
  "name": "shiplog",
  "version": "1.1.0",
  "description": "Infrastructure for long-running AI agents. Track progress, decisions, and handoffs across sessions.",
  "type": "module",
  "bin": {
    "shiplog": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc && chmod +x dist/index.js",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "npm run build && npm test"
  },
  "keywords": [
    "ai",
    "agent",
    "claude",
    "llm",
    "automation",
    "context-engineering"
  ],
  "author": "Daniel G Wilson",
  "license": "MIT",
  "dependencies": {
    "commander": "^12.1.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.1",
    "typescript": "^5.7.2",
    "vitest": "^4.0.15"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/danielgwilson/shiplog"
  }
}
